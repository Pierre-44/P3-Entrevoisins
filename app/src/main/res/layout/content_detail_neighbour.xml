<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/colorAccent"
    android:padding="@dimen/activity_padding"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.neighbour_list.DetailsActivity"
    tools:showIn="@layout/activity_details_neighbour">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingVertical="10dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cardview_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            android:elevation="1dp"
            app:cardCornerRadius="@dimen/cardview_corner_radius">

            <LinearLayout
                android:id="@+id/linearlayout_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--textview Name-->
                <TextView
                    android:id="@+id/detail_Name_neighbour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/cardview_horizontal_margin"
                    android:paddingTop="@dimen/cardview_vertical_margin"
                    android:paddingEnd="@dimen/cardview_horizontal_margin"
                    android:paddingBottom="@dimen/cardview_vertical_margin"
                    android:text="@string/neighbour_name"
                    android:textColor="@color/colorTitleText"
                    android:textSize="@dimen/neighbour_title" />

                <!--grey line separator-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorLightGrey" />

                <!--linear layout location-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/cardview_vertical_margin"
                    android:paddingBottom="@dimen/cardview_vertical_margin">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:tint="@color/colorAccent"
                        app:srcCompat="@drawable/ic_baseline_location_on_24">
                    </ImageView>

                    <TextView
                        android:id="@+id/detailAdresse"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:autoLink="map"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="@string/adresse_default"
                        android:textColor="@color/colorContentText"
                        android:textSize="@dimen/neighbour_text"
                        tools:ignore="EllipsizeMaxLines">

                    </TextView>

                </LinearLayout>

                <!--linear layout phone-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/cardview_vertical_margin"
                    android:paddingBottom="@dimen/cardview_vertical_margin">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:tint="@color/colorAccent"
                        app:srcCompat="@drawable/ic_baseline_local_phone_24" />

                    <TextView
                        android:id="@+id/detailPhone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:autoLink="phone"
                        android:text="@string/phone_default"
                        android:textColor="@color/colorContentText"
                        android:textSize="@dimen/neighbour_text" />
                </LinearLayout>

                <!--linear layout web link-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/cardview_vertical_margin"
                    android:paddingBottom="@dimen/cardview_vertical_margin">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:tint="@color/colorAccent"
                        app:srcCompat="@drawable/ic_baseline_language_24" />

                    <TextView
                        android:id="@+id/detailWeb"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:autoLink="web"
                        android:text="@string/web_default"
                        android:textColor="@color/colorContentText"
                        android:textSize="@dimen/neighbour_text" />
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardview_apropos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            android:elevation="1dp"
            app:cardCornerRadius="@dimen/cardview_corner_radius"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="10dp">

                <TextView
                    android:id="@+id/aProposTextTitre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/cardview_horizontal_margin"
                    android:paddingTop="@dimen/cardview_vertical_margin"
                    android:paddingEnd="@dimen/cardview_horizontal_margin"
                    android:paddingBottom="@dimen/cardview_vertical_margin"
                    android:text="@string/neighbour_about_me_tite"
                    android:textColor="@color/colorTitleText"
                    android:textSize="@dimen/neighbour_title" />
                <!--grey line separator-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorLightGrey" />

                <TextView
                    android:id="@+id/aProposText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:justificationMode="inter_word"
                    android:paddingStart="@dimen/cardview_horizontal_margin"
                    android:paddingTop="@dimen/cardview_vertical_margin"
                    android:paddingEnd="@dimen/cardview_horizontal_margin"
                    android:paddingBottom="@dimen/cardview_vertical_margin"
                    android:text="@string/neighbour_about_me"
                    android:textColor="@color/colorContentText"
                    android:textSize="@dimen/neighbour_text">
                    <!-- LA JUSTIFICATION DU TEXT NE FONCTIONNE PAS -->
                </TextView>

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>