<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_detail_neighbour"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/colorLightGrey"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_neighbour_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            android:elevation="1dp"
            app:cardCornerRadius="@dimen/cardview_corner_radius">

            <LinearLayout
                android:id="@+id/linearlayout_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--textview myName-->
                <TextView
                    android:id="@+id/text_name_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/cardview_horizontal_margin"
                    android:paddingTop="@dimen/cardview_vertical_margin"
                    android:paddingEnd="@dimen/cardview_horizontal_margin"
                    android:paddingBottom="@dimen/cardview_vertical_margin"
                    android:text="@string/neighbour_name"
                    android:textColor="@color/colorTitleText"
                    android:textSize="@dimen/neighbour_title" />

                <!--grey line separator-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorLightGrey" />

                <!--linear layout adresse-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/cardview_vertical_margin"
                    android:paddingBottom="@dimen/cardview_vertical_margin">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        app:srcCompat="@drawable/ic_baseline_location_on_24"
                        app:tint="@color/colorAccent" />

                    <TextView
                        android:id="@+id/text_adress_detail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="@string/adresse_default"
                        android:textColor="@color/colorContentText"
                        android:textSize="@dimen/neighbour_text">

                    </TextView>

                </LinearLayout>

                <!--linear layout phone-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/cardview_vertical_margin"
                    android:paddingBottom="@dimen/cardview_vertical_margin">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        app:srcCompat="@drawable/ic_baseline_local_phone_24"
                        app:tint="@color/colorAccent" />

                    <TextView
                        android:id="@+id/text_phone_number_detail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:text="@string/phone_default"
                        android:textColor="@color/colorContentText"
                        android:textSize="@dimen/neighbour_text" />
                </LinearLayout>

                <!--linear layout weblink-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/cardview_vertical_margin"
                    android:paddingBottom="@dimen/cardview_vertical_margin">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        app:srcCompat="@drawable/ic_baseline_language_24"
                        app:tint="@color/colorAccent" />

                    <TextView
                        android:id="@+id/text_web_link_detail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:text="@string/web_default"
                        android:textColor="@color/colorContentText"
                        android:textSize="@dimen/neighbour_text" />
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_about_me_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            android:elevation="1dp"
            app:cardCornerRadius="@dimen/cardview_corner_radius"

            >
            <!--linear layout aboutMe-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="10dp">

                <TextView
                    android:id="@+id/text_about_me_title_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/cardview_horizontal_margin"
                    android:paddingTop="@dimen/cardview_vertical_margin"
                    android:paddingEnd="@dimen/cardview_horizontal_margin"
                    android:paddingBottom="@dimen/cardview_vertical_margin"
                    android:text="@string/neighbour_about_me_tite"
                    android:textColor="@color/colorTitleText"
                    android:textSize="@dimen/neighbour_title" />
                <!--grey line separator-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorLightGrey" />

                <TextView
                    android:id="@+id/text_about_me_text_content_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:justificationMode="inter_word"
                    android:paddingStart="@dimen/cardview_horizontal_margin"
                    android:paddingTop="@dimen/cardview_vertical_margin"
                    android:paddingEnd="@dimen/cardview_horizontal_margin"
                    android:paddingBottom="@dimen/cardview_vertical_margin"
                    android:text="@string/neighbour_about_me"
                    android:textColor="@color/colorContentText"
                    android:textSize="@dimen/neighbour_text">

                </TextView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>