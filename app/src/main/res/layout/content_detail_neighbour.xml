<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/colorAccent"
    android:padding="@dimen/activity_padding"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_neighbour_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingVertical="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            android:elevation="1dp"
            app:cardCornerRadius="@dimen/cardview_corner_radius">

            <LinearLayout
                android:id="@+id/linearlayout_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--textview myName-->
                <TextView
                    android:id="@+id/Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/cardview_horizontal_margin"
                    android:paddingTop="@dimen/cardview_vertical_margin"
                    android:paddingEnd="@dimen/cardview_horizontal_margin"
                    android:paddingBottom="@dimen/cardview_vertical_margin"
                    android:text="@string/neighbour_name"
                    android:textColor="@color/colorTitleText"
                    android:textSize="@dimen/neighbour_title" />

                <!--grey line separator-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorLightGrey" />

                <!--linear layout myAdresse-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/cardview_vertical_margin"
                    android:paddingBottom="@dimen/cardview_vertical_margin">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:tint="@color/colorAccent"
                        app:srcCompat="@drawable/ic_baseline_location_on_24" />

                    <TextView
                        android:id="@+id/adress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="@string/adresse_default"
                        android:textColor="@color/colorContentText"
                        android:textSize="@dimen/neighbour_text">

                    </TextView>

                </LinearLayout>

                <!--linear layout myPhone-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/cardview_vertical_margin"
                    android:paddingBottom="@dimen/cardview_vertical_margin">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:tint="@color/colorAccent"
                        app:srcCompat="@drawable/ic_baseline_local_phone_24"
                        />

                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:text="@string/phone_default"
                        android:textColor="@color/colorContentText"
                        android:textSize="@dimen/neighbour_text" />
                </LinearLayout>

                <!--linear layout myWeb-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/cardview_vertical_margin"
                    android:paddingBottom="@dimen/cardview_vertical_margin">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:tint="@color/colorAccent"
                        app:srcCompat="@drawable/ic_baseline_language_24" />

                    <TextView
                        android:id="@+id/web"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:text="@string/web_default"
                        android:textColor="@color/colorContentText"
                        android:textSize="@dimen/neighbour_text" />
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_apropos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            android:elevation="1dp"
            app:cardCornerRadius="@dimen/cardview_corner_radius"

            >
            <!--linear layout aboutMe-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="10dp">

                <TextView
                    android:id="@+id/about_me_Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/cardview_horizontal_margin"
                    android:paddingTop="@dimen/cardview_vertical_margin"
                    android:paddingEnd="@dimen/cardview_horizontal_margin"
                    android:paddingBottom="@dimen/cardview_vertical_margin"
                    android:text="@string/neighbour_about_me_tite"
                    android:textColor="@color/colorTitleText"
                    android:textSize="@dimen/neighbour_title" />
                <!--grey line separator-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorLightGrey" />

                <TextView
                    android:id="@+id/about_me_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:justificationMode="inter_word"
                    android:paddingStart="@dimen/cardview_horizontal_margin"
                    android:paddingTop="@dimen/cardview_vertical_margin"
                    android:paddingEnd="@dimen/cardview_horizontal_margin"
                    android:paddingBottom="@dimen/cardview_vertical_margin"
                    android:text="@string/neighbour_about_me"
                    android:textColor="@color/colorContentText"
                    android:textSize="@dimen/neighbour_text">

                </TextView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>