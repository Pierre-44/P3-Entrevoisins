<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.neighbour_list.DetailsActivity"
    tools:showIn="@layout/activity_details_neighbour"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="@dimen/activity_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingVertical="10dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cardview_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            android:elevation="1dp"
            app:cardCornerRadius="6dp"
            >

            <LinearLayout
                android:id="@+id/linearlayout_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="10dp"
                >
                <!--textview Name-->
                <TextView
                    android:id="@+id/detailName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="0dp"
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:paddingEnd="@dimen/activity_horizontal_margin"
                    android:textSize="@dimen/neighbour_title"
                    android:textColor="@android:color/black"
                    android:text="Nom Utilisateur"
                    android:paddingBottom="10dp"
                    >
                    <!--add grey view 1dp high-->
                </TextView>

                <!--linear layout location-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/cardview_padding"
                    android:paddingBottom="@dimen/cardview_padding">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:tint="@color/colorAccent"
                        app:srcCompat="@drawable/ic_baseline_location_on_24">
                    </ImageView>

                    <TextView
                        android:id="@+id/detailAdresse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="0dp"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:paddingEnd="@dimen/activity_horizontal_margin"
                        android:textSize="@dimen/neighbour_text"
                        android:text="Adresse par défaut"
                        >
                    </TextView>
                </LinearLayout>

                <!--linear layout phone-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/cardview_padding"
                    android:paddingBottom="@dimen/cardview_padding">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:tint="@color/colorAccent"
                        app:srcCompat="@drawable/ic_baseline_local_phone_24">
                    </ImageView>

                    <TextView
                        android:id="@+id/detailPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:paddingEnd="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="0dp"
                        android:textSize="@dimen/neighbour_text"
                        android:text="+33 6 01 02 03 00">
                    </TextView>
                </LinearLayout>

                <!--linear layout web link-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/cardview_padding"
                    android:paddingBottom="@dimen/cardview_padding">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:tint="@color/colorAccent"
                        app:srcCompat="@drawable/ic_baseline_facebook_24">
                    </ImageView>

                    <TextView
                        android:id="@+id/detailWeb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:paddingEnd="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="0dp"
                        android:textSize="@dimen/neighbour_text"
                        android:text="www.facebook.fr/monNom"
                        >


                    </TextView>
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardview_apropos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            android:elevation="1dp"
            app:cardCornerRadius="6dp"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="10dp"
                >

                <TextView
                    android:id="@+id/aProposTextTitre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:paddingEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="0dp"
                    android:textSize="@dimen/neighbour_title"
                    android:textColor="@android:color/black"
                    android:text="A propos de moi"

                    >
                </TextView>

                <TextView
                    android:id="@+id/aProposText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:paddingEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="0dp"
                    android:textSize="@dimen/neighbour_text"
                    android:text="Bonjour !Je souhaiterais faire de la marche nordique. Pas initiée, je recherche une ou plusieurs personnes susceptibles de m'accompagner !J'aime les jeux de cartes tels la belote et le tarot.."
                    >
                </TextView>

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>